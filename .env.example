# =============================================================================
# FaithFlow Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment
# Generate secrets with: openssl rand -hex 32
# =============================================================================

# =============================================================================
# REQUIRED - Domain & SSL
# =============================================================================
DOMAIN=yourdomain.com
ACME_EMAIL=admin@yourdomain.com
SERVER_IP=1.2.3.4

# =============================================================================
# REQUIRED - Security (generate with: openssl rand -hex 32)
# =============================================================================
JWT_SECRET=CHANGE_THIS_generate_64_char_secret_with_openssl_rand_hex_32

# MongoDB Authentication
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_generate_with_openssl_rand_hex_32
MONGO_APP_USER=faithflow_app
MONGO_APP_PASSWORD=CHANGE_THIS_generate_with_openssl_rand_hex_32

# WebRTC TURN Server
TURN_SECRET=CHANGE_THIS_generate_with_openssl_rand_hex_32

# =============================================================================
# Database
# =============================================================================
DB_NAME=faithflow
# Note: MONGO_URL is auto-configured in docker-compose.prod.yml
# For manual setup: mongodb://faithflow_app:PASSWORD@localhost:27017/faithflow?authSource=faithflow

# =============================================================================
# Redis (optional but recommended)
# =============================================================================
REDIS_URL=redis://redis:6379
REDIS_ENABLED=true

# =============================================================================
# Production Mode
# =============================================================================
ENVIRONMENT=production
DEBUG=false

# =============================================================================
# CORS Origins (comma-separated, restrict in production!)
# =============================================================================
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# =============================================================================
# LiveKit (Voice/Video Calling)
# =============================================================================
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=generate_with_openssl_rand_hex_32

# =============================================================================
# EMQX (Real-time Messaging)
# =============================================================================
EMQX_DASHBOARD_USER=admin
EMQX_DASHBOARD_PASSWORD=CHANGE_THIS_strong_password

# =============================================================================
# SeaweedFS (File Storage)
# =============================================================================
SEAWEEDFS_PUBLIC_URL=https://files.yourdomain.com

# =============================================================================
# AI Services (Optional)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-...
STABILITY_API_KEY=sk-...

# =============================================================================
# WhatsApp Integration (Optional)
# =============================================================================
WHATSAPP_API_URL=http://your-whatsapp-gateway:3000
WHATSAPP_USERNAME=
WHATSAPP_PASSWORD=

# =============================================================================
# Payment Gateway (Optional)
# =============================================================================
IPAYMU_VA=
IPAYMU_API_KEY=
IPAYMU_ENV=sandbox

# =============================================================================
# Initial Setup (First run only)
# =============================================================================
INIT_SUPER_ADMIN_EMAIL=admin@yourdomain.com
INIT_SUPER_ADMIN_PASSWORD=CHANGE_THIS_strong_password
INIT_SUPER_ADMIN_NAME=Super Administrator
INIT_CHURCH_NAME=My Church
INIT_CHURCH_CITY=City
INIT_CHURCH_COUNTRY=Country
