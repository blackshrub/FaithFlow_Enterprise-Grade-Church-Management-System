# FaithFlow Frontend Environment Variables

# ===========================
# API BACKEND
# ===========================
# Backend API URL (adjust for production)
REACT_APP_API_URL=http://localhost:8000

# ===========================
# APPLICATION
# ===========================
# App name and branding
REACT_APP_NAME=FaithFlow
REACT_APP_VERSION=1.0.0

# ===========================
# FEATURES
# ===========================
# Feature flags (true/false)
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=false

# ===========================
# i18n (Internationalization)
# ===========================
# Default language: en (English) or id (Indonesian)
REACT_APP_DEFAULT_LANGUAGE=en

# ===========================
# FILE UPLOADS
# ===========================
# Maximum file size in MB
REACT_APP_MAX_FILE_SIZE_MB=10
# Allowed file types
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ===========================
# PAGINATION
# ===========================
# Default items per page for lists
REACT_APP_DEFAULT_PAGE_SIZE=20

# ===========================
# SESSION
# ===========================
# Session timeout in minutes (0 = no timeout)
REACT_APP_SESSION_TIMEOUT=0

# ===========================
# EXTERNAL SERVICES (Optional)
# ===========================
# Google Analytics (if enabled)
REACT_APP_GA_TRACKING_ID=

# Sentry error tracking (if enabled)
REACT_APP_SENTRY_DSN=

# ===========================
# DEPLOYMENT
# ===========================
# Public URL for production deployment
PUBLIC_URL=
