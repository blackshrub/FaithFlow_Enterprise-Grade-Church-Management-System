{
  "expo": {
    "name": "FaithFlow",
    "slug": "faithflow",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366F1"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.faithflow.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow FaithFlow to access your camera for video calls and profile photos",
        "NSPhotoLibraryUsageDescription": "Allow FaithFlow to access your photos for profile pictures",
        "NSMicrophoneUsageDescription": "Allow FaithFlow to access your microphone for voice and video calls",
        "UIBackgroundModes": [
          "audio",
          "voip",
          "fetch",
          "remote-notification"
        ]
      },
      "backgroundColor": "#FFFFFF"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366F1"
      },
      "package": "com.faithflow.app",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "VIBRATE",
        "WAKE_LOCK",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_PHONE_CALL",
        "USE_FULL_SCREEN_INTENT",
        "CALL_PHONE",
        "MANAGE_OWN_CALLS",
        "READ_PHONE_STATE",
        "BLUETOOTH",
        "BLUETOOTH_CONNECT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "scheme": "faithflow",
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6366F1",
          "sounds": [
            "./assets/notification.wav"
          ]
        }
      ],
      "expo-secure-store",
      "expo-localization",
      "expo-video",
      "expo-audio",
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true,
      "turboModules": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
